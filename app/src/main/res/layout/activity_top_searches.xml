<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/googleSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Animation"
        android:layout_toLeftOf="@+id/googlebtn"
        android:layout_alignParentLeft="true"/>
    <Button
        android:id="@+id/googlebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/searchSongLyrics"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googleSearch"
        android:text="@string/textsearchlyrics"/>

    <EditText
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchSongLyrics"
        android:ems="7"
        android:inputType="textPersonName"
        android:hint="@string/artist" />

    <EditText
        android:id="@+id/songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchSongLyrics"
        android:layout_toRightOf="@+id/artist"
        android:ems="7"
        android:inputType="textPersonName"
        android:hint="@string/songname" />
    <Button
        android:id="@+id/lyricssearchbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/songname"
        android:layout_below="@+id/searchSongLyrics"
        android:text="@string/search"/>
    <TextView
        android:id="@+id/topsearchesview"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="@string/topsearches"
        android:layout_below="@+id/lyricssearchbtn"/>
    <ListView
        android:id="@+id/topsearcheslist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topsearchesview"/>
        </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/header_layout"
            app:menu="@menu/navi_menu"
            android:id="@+id/nav_view"/>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>